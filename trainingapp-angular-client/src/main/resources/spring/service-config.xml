<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	
	<context:component-scan base-package="store.webapp.controller"/>
<!--     <context:component-scan base-package="store.model.validator.SubscribeValidator"/> -->
	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />
    <context:annotation-config/>
	
	<import resource="classpath:store-service.xml"/>
	<bean id="todoController" class="net.thecodersbreakfast.todo.web.controller.TodoController">
	   <property name="todoService" ref="todoService"></property>
	</bean>
</beans>